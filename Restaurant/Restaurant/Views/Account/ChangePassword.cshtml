@{
    Layout = null;
}
@model ChangePasswordViewModel
<body>
    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Jost', sans-serif;
            background: linear-gradient(to bottom, #000000, #1c1c1c, #2e2e2e);
        }

        span.field-validation-error {
            color: #ff9900;
            font-weight: bold;
            font-size: 0.9rem;
        }

        .main {
            width: 350px;
            height: 500px;
            background: url("/assets/images/background/1.jpg") no-repeat center/cover;
            border-radius: 10px;
            box-shadow: 5px 20px 50px #000;
            overflow: hidden;
        }

        label {
            color: #c9a227;
            font-size: 2.3em;
            justify-content: center;
            display: flex;
            margin: 50px;
            font-weight: bold;
            cursor: pointer;
            transition: .5s ease-in-out;
        }

        input {
            width: 60%;
            height: 10px;
            background: #1c1c1c;
            color: #fff;
            justify-content: center;
            display: flex;
            margin: 20px auto;
            padding: 12px;
            border: 1px solid #c9a227;
            outline: none;
            border-radius: 5px;
        }

        button {
            width: 60%;
            height: 40px;
            margin: 10px auto;
            justify-content: center;
            display: block;
            color: #1c1c1c;
            background: #c9a227;
            font-size: 1em;
            font-weight: bold;
            margin-top: 30px;
            outline: none;
            border: none;
            border-radius: 5px;
            transition: .2s ease-in;
            cursor: pointer;
        }

            button:hover {
                background: #b38e1f;
            }

        .login {
            height: 460px;
            background: #1c1c1c;
            border-radius: 60% / 10%;
            transform: translateY(-180px);
            transition: .8s ease-in-out;
        }

            .login label {
                color: #c9a227;
                transform: scale(.6);
            }
    </style>

    <div class="main">
        <div class="login">
            <form method="post">
                <label>Change Password</label>

                <input asp-for="CurrentPassword" placeholder="Current Password" required="" type="password" />
                <span asp-validation-for="CurrentPassword" class="field-validation-error"></span>

                <input asp-for="NewPassword" placeholder="New Password" required="" type="password" />
                <span asp-validation-for="NewPassword" class="field-validation-error"></span>

                <input asp-for="ConfirmPassword" placeholder="Confirm New Password" required="" type="password" />
                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>

                <div asp-validation-summary="ModelOnly" class="field-validation-error"></div>

                <button type="submit">Update Password</button>
            </form>
        </div>
    </div>
</body>